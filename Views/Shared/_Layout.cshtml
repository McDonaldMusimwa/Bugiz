<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bugiz</title>
    <link rel="icon" type="image/svg+xml" href="~/public/img/logoLarge.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bugiz.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Brand Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="./img/logo.png" alt="Bugiz Logo" width="150" height="100">
                </a>

                <!-- Navbar Toggler Button (for small screens) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto gap-3">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Features" asp-action="Index">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="http://localhost:5173/" target="_blank"  >Sign in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="http://localhost:5173/" target="_blank" >
                                <button class="btn btn-outline-success">Free Demo</button>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-white">
        <div class="container text-center p-5">
            <div class="row gap-4">
                <div class="col d-flex flex-row mb-3 text-center">
                    <h5 class="text-white">
                        Who we are</h5c>
                    <div class="flex-column">
                        <p>Project Management</p>
                        <p>Software development</p>

                    </div>
              
                </div>
                <div class="col d-flex flex-row mb-3 text-center">

                    <h5 class="text-white">Company</h5>
                        <div class="text-light" >
                            <a>About Bugiz</a>
                            <a>Careers</a>
                        </div>
                    
          
                </div>
                <div class="col d-flex flex-row mb-3 text-center">

                    <h5 class="text-light">Socials</h5>
                    <div class="flex-column text-light">
                        <a>Twitter</a>
                        <a>Linkedin</a>
                        <a>Youtube</a>

                    </div>

                </div>
            </div>



        </div>
        <div class="text-success">
            <hr>
        </div>
        <div class="container text-light">
            &copy; 2025 - Bugiz - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <base href="~/" />
    <script src="_framework/blazor.server.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
